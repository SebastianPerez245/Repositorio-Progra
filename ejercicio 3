Poner may√∫scula en la primera letra de cada palabra

#include <iostream>
#include <string>
#include <sstream>
using namespace std;

int main(){
    string texto;
    getline(cin, texto);

    bool inicio = true;
    for(int i=0;i<texto.size();i++){
        if(inicio && texto[i] != ' '){
            texto[i] = toupper(texto[i]);
            inicio = false;
        }
        if(texto[i] == ' ') inicio = true;
    }

    cout << texto;
    return 0;
}
